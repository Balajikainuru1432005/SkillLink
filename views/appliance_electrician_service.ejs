<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appliance Electrician Service | SkillLink</title>     
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/navstyle.css">
    <link rel="stylesheet" href="/css/footstyle.css">
</head>
<body>
<%- include("partials/navbar") %>
    <header>
        <div id="navbar"></div>
    </header>
    <section class="hero" style="background-image: url(http://www.sparkywilmington.com/wp-content/uploads/2023/08/Reliability-Meets-Professionalism-General-Electrician.gif);">
        <div class="hero-container">
            <h1>Appliance Electrician Service</h1>
            <p>Expert repair and maintenance for your appliances.</p>
        </div>
    </section>

    <div class="main-content">
        <section class="features">
            <div class="features-container">
                <div class="feature-card">
                    <h3 class="work">Appliance Electrician Services</h3>
                </div>
                <div class="feature-card">
                    <p class="breifing">Specialized services for all home appliances.</p>
                </div>
            </div>
        </section>

        <section id="booking" class="booking">
            <div class="booking-container">
                <div class="booking-form">
                    <h2>Book Your Appliance Electrician</h2>
                    <form id="serviceForm" action="/book-service" method="POST">
                        <div class="form-group">
                            <label for="zipcode">ZIP Code</label>
                            <input type="text" id="zipcode" name="zipcode" required placeholder="Enter your ZIP code">
                        </div>
                        <div class="form-group">
                            <label for="service-group">Service Group</label>
                            <select id="service-group" name="serviceGroup" required onchange="updateServiceTypes()">
                                <option value="">Select Service Group</option>
                                <option value="cooling-refrigeration">Cooling & Refrigeration</option>
                                <option value="entertainment-appliances">Entertainment & Home Appliances</option>
                                <option value="power-heating">Power & Heating Appliances</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="service-type">Specific Service</label>
                            <select id="service-type" name="serviceType" required disabled>
                                <option value="">Select a Service Group first</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="date">Preferred Date</label>
                            <input type="date" id="date" name="date" required>
                        </div>
                        <div class="form-group">
                            <label for="time">Preferred Time</label>
                            <select id="time" name="time" required>
                                <option value="">Select time slot</option>
                                <option value="morning">Morning (8am - 12pm)</option>
                                <option value="afternoon">Afternoon (12pm - 4pm)</option>
                                <option value="evening">Evening (4pm - 8pm)</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="service-details">Describe Your Requirement</label>
                            <textarea id="service-details" name="details" rows="4" placeholder="Mention appliance details, issues, etc."></textarea>
                        </div>
                        <div class="price-calculator">
                            <h3>Estimated Price</h3>
                            <p>Starting from ‚Çπ499</p>
                            <small>Final price may vary based on service complexity</small>
                        </div>
                        <button type="submit" class="submit-button">Book Now</button>
                    </form>
                </div>
            </div>
        </section>
    </div>

    <section class="how-it-works">
        <h2>How SkillLink Works</h2>
        <div class="steps">
            <div class="step">
                <img src="calender.png" alt="Pick a Time">
                <h3>Choose Your Service</h3>
                <p>Select your appliance repair service.</p>
            </div>
            <div class="step">
                <img src="booking.png" alt="Book Instantly">
                <h3>Confirm Booking</h3>
                <p>Get responses from professionals and confirm.</p>
            </div>
            <div class="step">
                <img src="pro1.png" alt="Your Electrician Arrives">
                <h3>Your Electrician Arrives</h3>
                <p>A certified electrician arrives on time.</p>
            </div>
        </div>
    </section>

    <section class="hero1">
        <div class="hero-container">
            <a href="#booking" class="nav-button">Book Now</a>
        </div>
    </section>

    <section class="features_1">
        <div class="features-container_1">
            <div class="feature-card_1">
                <div class="feature-icon_1">‚ö°</div>
                <h3>Expert Electrical Work</h3>
                <p>Our professionals ensure safety and efficiency.</p>
            </div>
            <div class="feature-card_1">
                <div class="feature-icon_1">üîå</div>
                <h3>Certified & Trusted</h3>
                <p>All our electricians are experienced and certified.</p>
            </div>
            <div class="feature-card_1">
                <div class="feature-icon_1">‚è≥</div>
                <h3>Same-Day Service</h3>
                <p>Book today and get service as soon as today.</p>
            </div>
        </div>
    </section>
    <footer>
        <div id="footer"></div>
    </footer>
    <script src="/js/script.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {

            const dateInput = document.getElementById('date');
            dateInput.min = new Date().toISOString().split('T')[0];

            const zipcodeInput = document.getElementById('zipcode');
            zipcodeInput.addEventListener('input', function() {
                this.value = this.value.replace(/[^0-9]/g, '').slice(0, 6);
            });
        });

        function updateServiceTypes() {
            const serviceGroup = document.getElementById('service-group').value;
            const serviceTypeSelect = document.getElementById('service-type');
            serviceTypeSelect.innerHTML = ''; // Clear previous options
            serviceTypeSelect.disabled = false; // Enable the dropdown

            const serviceTypes = {
                'cooling-refrigeration': [
                    { value: 'ac-repair', text: 'AC Repair' },
                    { value: 'fridge-repair', text: 'Fridge Repair' },
                    { value: 'watercooler-repair', text: 'Water Cooler Repair' }
                ],
                'entertainment-appliances': [
                    { value: 'tv-repair', text: 'TV Repair' },
                    { value: 'home-theater', text: 'Home Theater Repair' },
                    { value: 'music-system', text: 'Music System Repair' }
                ],
                'power-heating': [
                    { value: 'inverter-repair', text: 'Inverter Repair' },
                    { value: 'waterpurifier-repair', text: 'Water Purifier Repair' },
                    { value: 'geyser-repair', text: 'Geyser Repair' }
                ]
            };

            if (serviceGroup && serviceTypes[serviceGroup]) {
                serviceTypes[serviceGroup].forEach(service => {
                    const option = document.createElement('option');
                    option.value = service.value;
                    option.text = service.text;
                    serviceTypeSelect.appendChild(option);
                });
            } else {
                const defaultOption = document.createElement('option');
                defaultOption.value = '';
                defaultOption.text = 'Select a Service Group first';
                serviceTypeSelect.appendChild(defaultOption);
                serviceTypeSelect.disabled = true;
            }
        }
    </script>
<%- include("partials/footer") %>
</body>
</html>