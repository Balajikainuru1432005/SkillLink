    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('smartHomeForm');
            const zipcodeInput = document.getElementById('zipcode');
            const dateInput = document.getElementById('date');
            const serviceType = document.getElementById('service-type');
            const priceDisplay = document.querySelector('.price-calculator p');

            // Set minimum date to today
            dateInput.min = new Date().toISOString().split('T')[0];

            // ZIP code validation
            zipcodeInput.addEventListener('input', function() {
                this.value = this.value.replace(/[^0-9]/g, '').slice(0, 6);
            });

            // Dynamic price calculation
            const prices = {
                'smart-lighting': '‚Çπ2999',
                'smart-switches': '‚Çπ1999',
                'home-automation': '‚Çπ4999'
            };

            serviceType.addEventListener('change', function() {
                const selectedService = this.value;
                priceDisplay.textContent = `Starting from ${prices[selectedService]}`;
            });

            // Form submission
            form.addEventListener('submit', function(e) {
                e.preventDefault();

                if (zipcodeInput.value.length !== 6) {
                    alert('Please enter a valid 6-digit ZIP code.');
                    return;
                }

                const formData = {
                    zipcode: zipcodeInput.value,
                    serviceType: serviceType.value,
                    date: dateInput.value,
                    time: document.getElementById('time').value,
                    details: document.getElementById('service-details').value
                };

                console.log('Smart Home Electrical Upgrades Booking Submitted:', formData);
                alert('Thank you for your booking! We will confirm your appointment shortly.');
            });
        });
