<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Details - <%= seller.name %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            line-height: 1.6;
        }
        .navbar {
            background-color: #007bff;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            position: sticky;
            top: 0;
            z-index: 1000;
        }
        .navbar .brand {
            color: #fff;
            font-size: 24px;
            font-weight: bold;
        }
        .navbar .user-info {
            display: flex;
            align-items: center;
        }
        .navbar .user-info img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
            border: 2px solid #fff;
        }
        .navbar .user-info span {
            color: #fff;
            font-size: 16px;
            margin-right: 20px;
        }
        .navbar .user-info a {
            color: #fff;
            text-decoration: none;
            font-weight: bold;
            padding: 8px 15px;
            border-radius: 5px;
            background-color: #0056b3;
            transition: background-color 0.3s;
        }
        .navbar .user-info a:hover {
            background-color: #003d82;
        }
        .container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
        }
        h1 {
            color: #007bff;
            text-align: center;
            margin-bottom: 30px;
            font-size: 32px;
        }
        .seller-details {
            background: #fff;
            padding: 25px;
            margin-bottom: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }
        .seller-details h2 {
            color: #007bff;
            margin-bottom: 20px;
            font-size: 24px;
        }
        .seller-details img.profile {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 20px;
            border: 3px solid #007bff;
        }
        .seller-details p {
            margin: 10px 0;
            font-size: 16px;
        }
        .shop-images {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 20px;
        }
        .shop-images img {
            width: 200px;
            height: 150px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid #ddd;
        }
        .supplies-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .supplies-table th, .supplies-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        .supplies-table th {
            background-color: #007bff;
            color: #fff;
        }
        .btn {
            padding: 12px 25px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s;
            display: inline-block;
            margin-top: 20px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        .footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 15px;
            position: fixed;
            bottom: 0;
            width: 100%;
            box-shadow: 0 -2px 5px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="brand">SkillLink</div>
        <div class="user-info">
            <img src="<%= profilePhoto %>" alt="Profile">
            <span>Welcome, <%= customerName %></span>
            <a href="/logout">Logout</a>
        </div>
    </nav>

    <div class="container">
        <h1>Seller Details</h1>

        <div class="seller-details">
            <h2><%= seller.name %> - <%= seller.shopName %></h2>
            <img src="<%= seller.image %>" alt="<%= seller.name %>" class="profile">
            <p><strong>Location:</strong> <%= seller.location %></p>
            <p><strong>Contact:</strong> <%= seller.contact %></p>
            <p><strong>Rating:</strong> <%= seller.rating %></p>
            <p><strong>Request Category:</strong> <%= request.category || 'Not specified' %></p>
            <p><strong>Additional Info:</strong> <%= request.additional || 'None' %></p>

            <h3>Supplies Pricing</h3>
            <table class="supplies-table">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Units</th>
                        <th>Price per Unit</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% supplies.forEach(item => { %>
                        <tr>
                            <td><%= item.name %></td>
                            <td><%= item.units %></td>
                            <td>₹<%= item.price.toFixed(2) %></td>
                            <td>₹<%= item.total.toFixed(2) %></td>
                        </tr>
                    <% }) %>
                    <tr>
                        <td colspan="3"><strong>Total Price:</strong></td>
                        <td><strong>₹<%= seller.totalPrice %></strong></td>
                    </tr>
                </tbody>
            </table>

            <% if (seller.shopImages && seller.shopImages.length > 0) { %>
                <h3>Shop Images</h3>
                <div class="shop-images">
                    <% seller.shopImages.forEach(image => { %>
                        <img src="<%= image %>" alt="Shop Image">
                    <% }) %>
                </div>
            <% } %>

            <!-- Placeholder for Accept button (to be implemented) -->
            <a href="#" class="btn">Accept Seller Offer</a>
        </div>
    </div>

    <footer class="footer">
        <p>© 2025 SupplySync. All rights reserved.</p>
    </footer>
</body>
</html>