    <script src="/js/script.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
        const dateInput = document.getElementById('date');
        dateInput.min = new Date().toISOString().split('T')[0];

        const zipcodeInput = document.getElementById('zipcode');
        zipcodeInput.addEventListener('input', function() {
            this.value = this.value.replace(/[^0-9]/g, '').slice(0, 6);
        });
    });

        function updateServiceTypes() {
            const serviceGroup = document.getElementById('service-group').value;
            const serviceTypeSelect = document.getElementById('service-type');
            serviceTypeSelect.innerHTML = ''; // Clear previous options
            serviceTypeSelect.disabled = false; // Enable the dropdown

            const serviceTypes = {
                'installation-setup': [
                    { value: 'wiring-circuit', text: 'Wiring & Circuit Installation' },
                    { value: 'switchboard-socket', text: 'Switchboard & Socket Installation' },
                    { value: 'lighting-fan', text: 'Lighting & Fan Installation' },
                    { value: 'inverter-battery', text: 'Inverter & Battery Setup' }
                ],
                'repair-maintenance': [
                    { value: 'faulty-wiring', text: 'Faulty Wiring Repair' },
                    { value: 'short-circuit', text: 'Short Circuit Fixing' },
                    { value: 'appliance-repair', text: 'Electrical Appliance Repair' },
                    { value: 'fuse-mcb', text: 'Fuse & MCB Replacement' }
                ],
                'safety-upgrades': [
                    { value: 'earthing-grounding', text: 'Earthing & Grounding Work' },
                    { value: 'surge-protector', text: 'Surge Protector & Stabilizer Installation' },
                    { value: 'load-balancing', text: 'Load Balancing & Energy Efficiency Solutions' },
                    { value: 'smart-home', text: 'Smart Home Electrical Upgrades' }
                ]
            };

            if (serviceGroup && serviceTypes[serviceGroup]) {
                serviceTypes[serviceGroup].forEach(service => {
                    const option = document.createElement('option');
                    option.value = service.value;
                    option.text = service.text;
                    serviceTypeSelect.appendChild(option);
                });
            } else {
                const defaultOption = document.createElement('option');
                defaultOption.value = '';
                defaultOption.text = 'Select a Service Group first';
                serviceTypeSelect.appendChild(defaultOption);
                serviceTypeSelect.disabled = true;
            }
        }
    </script>
